<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niners.ninernav">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_navigation_screen"
            android:parentActivityName=".MainScreen"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="niners.ninernav.MainScreen" />
        </activity>
        <activity
            android:name=".SettingsScreen"
            android:label="@string/title_activity_settings_screen"
            android:parentActivityName=".MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="niners.ninernav.MainScreen" />
        </activity>
    </application>

</manifest>